<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="pagination__prev" href="{{page_url prev}}">&larr; Newer</a>
    {{/if}}
    <span class="pagination__number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="pagination__next" href="{{page_url next}}">Older &rarr;</a>
    {{/if}}
</nav>
